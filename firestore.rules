rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read/write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Projects subcollection
      match /projects/{projectId} {
        // Allow read if owner OR if user is listed in the shares subcollection
        allow read: if request.auth != null && (
          request.auth.uid == userId || 
          exists(/databases/$(database)/documents/users/$(userId)/projects/$(projectId)/shares/$(request.auth.uid))
        );
        // Only owner can write
        allow write: if request.auth != null && request.auth.uid == userId;

        // Project shares
        match /shares/{shareId} {
          allow read, write: if request.auth != null && request.auth.uid == userId;
        }
      }

      // Tasks subcollection
      match /tasks/{taskId} {
        allow read: if request.auth != null && (
          request.auth.uid == userId ||
          exists(/databases/$(database)/documents/users/$(userId)/tasks/$(taskId)/shares/$(request.auth.uid))
        );
        allow write: if request.auth != null && request.auth.uid == userId;

        // Task shares
        match /shares/{shareId} {
          allow read, write: if request.auth != null && request.auth.uid == userId;
        }
      }

      // Time entries subcollection
      match /timeEntries/{entryId} {
        // Complex: Need to check if the PARENT task or project is shared to allow reading entries?
        // Or simply rely on the fact that shared reports query specific entries.
        // For now, strict owner access is safer unless you denormalize 'sharedWith' arrays onto entries.
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Shared access â€” users can read entries shared with them
    match /sharedAccess/{docId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.sharedWithUid;
      allow create, update, delete: if request.auth != null && request.auth.uid == resource.data.ownerUid;
    }
  }
}
